{
  "name": "ocdc",
  "version": "2.5.0",
  "description": "Concurrent branch development with devcontainers using clone-based isolation",
  "main": "bin/ocdc",
  "bin": {
    "ocdc": "./bin/ocdc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/athal7/ocdc.git"
  },
  "keywords": [
    "devcontainer",
    "docker",
    "development",
    "branches",
    "concurrent"
  ],
  "author": "Andrew Thal <467872+athal7@users.noreply.github.com>",
  "license": "MIT",
  "engines": {
    "node": ">=14"
  },
  "scripts": {
    "test": "./test/run_tests.bash",
    "semantic-release": "semantic-release",
    "postinstall": "echo 'OCDC installed successfully! Run \"ocdc --help\" to get started.'"
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^9.2.6",
    "semantic-release": "^22.0.5"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            {
              "path": "dist/devcontainer-multi.tar.gz",
              "label": "OCDC Release Archive"
            }
          ]
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "CHANGELOG.md",
            "plugin/package.json",
            "package.json"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ]
    ]
  }
}